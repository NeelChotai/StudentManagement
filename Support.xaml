<Window x:Class="StudentManagement.Support"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentManagement"
        mc:Ignorable="d"
        Title="Support" Height="300" Width="300" ResizeMode="NoResize">
    <Grid Background="#FF264882">
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="Brief description of error" VerticalAlignment="Top" Width="275" Margin="10,10,0,0"/>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="10,38,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="176" Width="275" Background="White"><Run Text="In-depth explaination of error and what you were doing when this error occured, please include your username and any error messages you encountered."/></TextBlock>
        <Button x:Name="button" Content="Send" Margin="97,219,97,15" Click="button_Click"/>

    </Grid>
</Window>
