        <PasswordBox x:Name="passwordBox" HorizontalAlignment="Left" Margin="121,25,0,0" VerticalAlignment="Top" Width="196" Height="29"/>
        <Label x:Name="label" Content="New Password:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,28,0,0" Foreground="White"/>
        <Label x:Name="label1" Content="Repeat Password: " HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,65,0,0" Foreground="White"/>
        <PasswordBox x:Name="passwordBox1" HorizontalAlignment="Left" Margin="121,62,0,0" VerticalAlignment="Top" Width="196" Height="29"/>
        <Button x:Name="button" Content="Submit" HorizontalAlignment="Left" VerticalAlignment="Top" Width="114" Margin="110,108,0,0" Height="41" Click="button_Click"/>

    </Grid>
</Window>
